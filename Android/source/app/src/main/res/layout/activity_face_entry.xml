<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/tenginebg"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="face page"
        android:textSize="40dp"
        android:textColor="@color/light_blue_A400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/bitmap"
        android:layout_marginTop="300dp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@drawable/button_face_demo_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/jumpToBitmap"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:paddingHorizontal="10dp"
            android:text="pick image"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/camera"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_face_demo_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bitmap">

        <TextView
            android:id="@+id/jumpToCamera"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:paddingHorizontal="10dp"
            android:text="front camera"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/effect"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_face_demo_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/camera">

        <TextView
            android:id="@+id/effectText"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:paddingHorizontal="10dp"
            android:text="effect"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
